<%- include('./partials/header') %>

  <%- include('./partials/navigation') %>

    <!-- Page Content -->
    
    <img src="./images/homepagebannerbis.jpg" class="banner img-fluid" alt="Bonanza Paris">

    <div class="container container-main">
     
      <h2>Le chant des Sirènes</h2>
      <p>Une collection capsule exclusive inspirée de la mythologie et de la légende des sirènes. Rondes, texturées, ovales ou baroque les perles sont les maîtresses de cette collection.</p>

      <div class="row">

          <div class="col-lg-9">

            <div class="row">

              <% for (jewel of jewels) { %>
                <div class="col-lg-4 col-md-6 mb-4">
                  <div class="card h-100 border border-white">
                    <a href="/article/<%= jewel.image.toLowerCase() %>">
                      <img class="card-img-top" src="./images/<%= jewel.image %>.jpg" alt="">
                    </a>
                    <div class="card-body">
                      <h4 class="card-title">
                        <a href="/article/<%= jewel.name.toLowerCase() %>"><%= jewel.name %></a>
                      </h4>
                      <h5><%= jewel.price%></h5>
                    </div>
                    <div class="card-footer border border-white">
                      <small class="text-muted">&#9733; &#9733; &#9733; &#9733; &#9734;</small>
                      <a href="/favoris/add/<%= jewel.name.toLowerCase()%>" class="link-add-bookmarks">+ Ajouter aux favoris</a>
                    </div>
                  </div>
                </div>
              <% } %>

            </div>
            <!-- /.row -->

          </div>
          <!-- /.col-lg-9 -->

      </div>
      <!-- /.row -->

    </div>
    <!-- /.container -->

    <%- include('./partials/footer') %>