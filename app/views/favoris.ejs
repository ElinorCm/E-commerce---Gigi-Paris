<%- include('./partials/header') %>

  <%- include('./partials/navigation') %>

    <!-- Page Content -->
    <div class="container container-main">

      <div class="row">
        <div class="col">
          <h3 class="text-center">Votre liste de préférences</h3>

          <% if (!locals.jewels) { %>
            <p>Vous n'avez pas encore ajouté de favoris</p>
            <% } else { %>

              <table class="table">
                <thead>
                  <th>
                    <th>Article</th>
                    <th>Prix HT</th>
                  <th></th>
                </thead>
                <tbody>


                  <% for (jewel of jewels) { %>

                    <tr>
                      <td>
                        <img class="img-thumbnail img-cart-list" src="./images/<%= jewel.image %>.jpg" alt="">
                        <div class="item-description">
                          <h5 class="item-title">
                            <%= jewel.name %>
                          </h5>
                        </div>
                      </td>

                      <td>
                        <p class="item-subtotal">
                          <%= jewel.price%>
                        </p>
                      </td>

                      <td>
                        <a href="/favoris/delete/<%= jewel.name.toLowerCase() %>">Enlever de la liste</a>
                      </td>
                    </tr>

                    <% } %>
                </tbody>
              </table>

              <% } %>

                <div class="row">
                  <div class="col text-right">
                    <a class="btn btn-success" href="/">
                      Retour à l'accueil
                    </a>
                  </div>
                </div>

        </div>
      </div>
    </div>

    <%- include('./partials/footer') %>