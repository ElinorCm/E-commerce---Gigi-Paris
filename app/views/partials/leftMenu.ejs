<div class="col-lg-3">

  <% let tokencolliers = []; %>
  <% let tokenboucles = []; %>
  <% let tokenbracelet = []; %>

  <% for (jewel of jewels) { %>
    <% if (jewel.category === 'Collier') {tokencolliers.push(jewel.category)} %>
    <% if (jewel.category === 'Bracelet') {tokenbracelet.push(jewel.category)} %>
    <% if (jewel.category === 'Boucles') {tokenboucles.push(jewel.category)} %>
  <% } %>

  <h1 class="my-4">Bonanza Paris</h1>
  <h5>Cat√©gories</h5>
  <div class="list-group">
    <a class="list-group-item d-flex justify-content-between align-items-center" href="#">
      Colliers
      <span class="badge badge-primary badge-pill"><%= tokencolliers.length%></span>
    </a>
    <a class="list-group-item d-flex justify-content-between align-items-center" href="#">
      Boucles
      <span class="badge badge-primary badge-pill"><%= tokenboucles.length%></span>
    </a>
    <a class="list-group-item d-flex justify-content-between align-items-center" href="#">
      Bracelets
      <span class="badge badge-primary badge-pill"><%= tokenbracelet.length%></span>
    </a>
  </div>

</div>